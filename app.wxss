.newItem {
  padding: 30rpx 20rpx 16rpx;
  margin-bottom: 10rpx;
}

.newItem .top {
  line-height: 30px;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  display: flex;
  position: relative;
}
.newItem .top .wechat{
  color: #fb5100;
  position: absolute;
  width: 140rpx;
  height: 40rpx;
  line-height: 40rpx;
  right: 0;
  bottom: 45rpx;
  border: 1px solid #fb5100;
  border-radius: 4px;
  text-align: center;
  font-size: 26rpx;
  vertical-align: top;
}
.newItem .top .wechat .img{
  display: inline-block;
  vertical-align: top;
  width: 40rpx;
  height: 30rpx;
  padding-right: 5rpx;
  z-index: 10;
  padding-top:7rpx;
}
.newItem .contentTxt{
  font-size: 28rpx;
  line-height: 50rpx;
}
.newItem .top .avatar{
  width: 42px;
  height: 42px;
  overflow: hidden;
  border-radius: 50%;
}
.newItem .top .topRight{
  flex: 1;
  line-height: 24px;
  padding-left: 20rpx;
}
.newItem .top .topRight .txt1{
  font-size: 28rpx;
}
.newItem .top .topRight .txt2{
  font-size: 24rpx;
  line-height: 46rpx;
}
.newItem .top .topRight .ding{
  margin-left: 20rpx;
  font-size: 24rpx;
  padding: 0 16rpx;
  border-radius: 4px;
  border: 1rpx solid #fb5100;
  color: #fb5100;
}
.newItem .top .type {
  margin-left: 0;
  padding: 10rpx 16rpx;
  background-color: #b884c1;
  color: #fff;
  border-radius: 10rpx;
}
.newItem .address {
  font-size: 24rpx;
  color: #999;
  line-height: 60rpx;
  padding-top: 20rpx;
}
.newItem .address text{
  display: inline-block;
  line-height:60rpx;
  padding-top:20rpx;
}
.newItem .address .img{
  width: 30rpx;
  height: 30rpx;
  vertical-align: top;
  padding-top: 15rpx;
}
.newItem .info {
  margin-top: 16rpx;
  height: 50rpx;
  line-height: 66rpx;
  font-size: 26rpx;
  padding-left: 16rpx;
  color: #333;
  border-top: 1rpx solid #eee;
  padding: 10rpx 0;
}
.newItem .info .module{
  color: #fb5100;
  line-height: 66rpx;
  float: left;
}
.newItem text {
  font-size: 24rpx;
}
.newItem .info .img {
  padding-top: 16rpx;
  padding-right: 6rpx;
  width: 30rpx;
  height: 30rpx;
  vertical-align: top;
}

.newItem .images {
  padding-top: 30rpx;
}

.newItem .images image {
  width: 200rpx;
  height: 200rpx;
  float: left;
  padding-right: 20rpx;
}
.emptyData{
  padding-top: 20rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  text-align: center;
}
.titleWrapper{
  display: flex;
  padding: 20rpx 50rpx;
}
.titleWrapper .line2{
  flex: 1;
  border-bottom: 1rpx solid #ccc;
  transform: translateY(-28rpx);
}
.titleWrapper .text{
  font-size: 24rpx;
  color: #666;
  line-height: 60rpx;
  padding: 0 20rpx;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  overflow-x:hidden;
} 
.border-bottom{
  border-bottom: 0.5rpx solid #dedede;
}
