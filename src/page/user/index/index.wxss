page{
    background-color: #f4f4f4
}
/*顶部*/
.top{
    padding: 48rpx 24rpx;
    background-color: #3d667a;
}
.top .user{
    display: flex;
    justify-content: space-between;
    color: #fff;
    font-size: 30rpx;
    position: relative;
}
.top .user .headImg{
    height: 120rpx;
    width: 120rpx;
    border-radius: 50%;
    margin-right: 24rpx;
}
.top .user .msg{
    flex: 1;
}
.top .user .msg .userName{
    margin: 20rpx 0 10rpx 0;
}
.top .user .iconfont{
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
    font-size: 55rpx;
    color: #fff;
}

.tag-list{
    padding: 0 18rpx;
    display: flex;
    margin-top: 45rpx;
}
.tag-list .item{
    height: 40rpx;
    line-height: 40rpx;
    width: 120rpx;
    text-align: center;
    background: rgba(0, 0, 0, 0.2);
    color: #fff;
    margin-right: 20rpx;
    font-size: 24rpx;
}

.icon-list{
    display: flex;
    color: #4b4b4b;
    font-size: 24rpx;
    background: #fff;
    margin-bottom: 20rpx;
}
.icon-list:last-child{
    margin-bottom: 0;
}
.icon-list .iconfont{
    font-size: 54rpx;
    color: #4b4b4b;
}
.icon-list .icon-item{
    width: 25%;
    text-align: center;
    padding: 32rpx 0 19rpx;
}
.icon-list .icon-item .text{
    margin-top: 30rpx;
}

.title{
    background: #fff;
    font-size: 24rpx;
    height: 58rpx;
    line-height: 58rpx;
    padding-left: 24rpx;
    color: #4b4b4b;
    margin-bottom: -10rpx;
}
.icon-list .icon-money{
    color: #c23030;
}
.icon-list .icon-qrcode{
    color: #333;
}
.icon-list .icon-notice{
    color: #255591;
}
.icon-list .icon-crown{
    color: #e7991e;
}
.icon-list .icon-lock{
    color: #552b8f;
}
.icon-list .icon-reset{
    color: #599cbc;
}
.icon-list .icon-wechat{
    color: #339629;
}
.icon-list .icon-change{
    color: #2d4b77;
}
.icon-list .icon-source{
    color: #207277;
}
.icon-list .icon-headset{
    color: #33708d;
}


/*使屏幕变暗  */
.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}
/*对话框 */
.commodity_attr_box {
    height: 177rpx;
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    background: #fff;
    padding-top: 20rpx;
}
.commodity_attr_box .item{
    height: 88rpx;
    line-height: 88rpx;
    position: relative;
    color: #4b4b4b;
    font-size: 30rpx;
    text-align: center;
}
.commodity_attr_box .confrimLogout:after{
    content: '';
    display: inline-block;
    width: 720rpx;
    height: 0.5rpx;
    background: #dedede;
    left: 50%;
    bottom: 0;
    transform: translateX(-50%);
    position: absolute;
}